        .main-box.mb-bluegreen
            .row 
                br
                br
                br

                .col-md-4
                .col-md-4
                     h1 Register
                     form(role="form", action="/auth/register", method="post")
                          .form-group
                              label(for="fname")
                                | First Name
                              input#fname.form-control(name="fname", placeholder="First Name" type="text")
                          .form-group
                              label(for="lname") Last Name
                              input#lname.form-control(name="lname", placeholder="Last Name", type="text")
                          .form-group
                              label(for="username") 
                                | Username
                                span.req *
                                span.req2 (Must be atleast 8 alphacharacters)
                              input#username.form-control(name="username", placeholder="Username" ,type="text")
                          .form-group
                              label(for="email") 
                                | Email
                                span.req *
                              input#email.form-control(name="email", placeholder="Email Address", type="text")
                          .form-group
                              label(for="password") Password
                              input#password.form-control(name="password", placeholder="Password",type="password")
                          p
                              a.btn.btn-link(href="/") Cancel
                              button.btn.btn-default(type="submit", value="Register") Register

